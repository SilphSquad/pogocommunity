{% include 'common/form-errors.twig' %}
<form class="form-horizontal" role="form" method="post" action="{{ formSubmitAction }}">
    {{ csrf_field() }}

    <div class="form-group">
        <label for="name" class="col-md-4 control-label">Display name</label>
        <div class="col-md-6">
            <input id="name" type="text" class="form-control" name="name" readonly onfocus="this.removeAttribute('readonly');" maxlength="30" required>
        </div>
    </div>

    <div class="form-group">
        <label for="email" class="col-md-4 control-label">Email</label>
        <div class="col-md-6">
            <input id="email" type="email" class="form-control" name="email" readonly onfocus="this.removeAttribute('readonly');" maxlength="255" required>
        </div>
    </div>

    <div class="form-group">
        <label for="password" class="col-md-4 control-label">Password</label>
        <small>leave blank to not change it</small>
        <div class="col-md-6">
            <input id="password" type="password" class="form-control" name="password" readonly onfocus="this.removeAttribute('readonly');">
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-8 col-md-offset-4">
            <button type="submit" class="btn outline btn-primary">
                Submit
            </button>
        </div>
    </div>
</form>
